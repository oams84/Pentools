import socket

def scan_ports(ip_address):
    open_ports = []
    common_ports = [20, 21, 22, 23, 25, 53, 80, 161,  443]  # Add more ports if needed

    for port in common_ports:
        sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
        sock.settimeout(1)  # Set the timeout value for the connection
        result = sock.connect_ex((ip_address, port))
        if result == 0:
            service_name = socket.getservbyport(port)
            open_ports.append((port, service_name))
        sock.close()

    return open_ports

# Example usage
def get_ip_address(url):
    ip_address = socket.gethostbyname(url)
    return ip_address

website_url = "example.com" # Replace with the website URL
ip_address = get_ip_address(website_url)
if ip_address:
    print(f"The IP address of {website_url} is: {ip_address}")
    open_ports = scan_ports(ip_address)
    if open_ports:
        print(f"The open ports on {website_url} are:")
        for port, service_name in open_ports:
            print(f"Port: {port}, Service Name: {service_name}")
    else:
        print(f"No open ports found on {website_url}")
else:
    print(f"Failed to retrieve the IP address of {website_url}")